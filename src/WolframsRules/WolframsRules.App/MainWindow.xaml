<Window x:Class="WolframsRules.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WolframsRules.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Button x:Name="btnGo" HorizontalAlignment="Right" Content="Go" Width="100" Click="btnGo_Click"/>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <Canvas Grid.Row="1" x:Name="canvas">
                <Rectangle Width="7" Height="7" Margin="10,10,0,0" Fill="Red" />
                <Rectangle Width="7" Height="7" Margin="20,20,0,0" Fill="Red" />
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
